<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetManager" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#4FC3F7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.BudgetManager</item>
    </style>

    <style name="Edittext.Theme" parent="Theme.MaterialComponents.Light">
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu
        </item>
    </style>

    <style name="BottomAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide_out</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#E1F5FE</item>
    </style>

    <style name="App.Custom.DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:backgroundTint">#FFFFFF</item>

    </style>

    <style name="BottomNavigationView">
        <item name="colorSecondaryContainer">#B3E5FC</item>
    </style>
</resources>